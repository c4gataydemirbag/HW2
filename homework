class Node:
    def __init__(self, data):
        self.data = data
        self.next = None

def get_node_position(head, target_value):
    current = head
    position = 0
    while current:
        if current.data == target_value:
            return position  # return index (0-based)
        current = current.next
        position += 1
    return -1 
